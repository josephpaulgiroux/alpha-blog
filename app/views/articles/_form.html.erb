
        
  <div class="row justify-content-md-center">
    <div class="card mt-4 col-8 bg-info shadow-lg ">
      <%= render 'shared/errors' %>
      <div class="card-body">
        <%= form_with(model: @article, local: true) do |f| %>
          <div class="form-group row">
              <%= f.label :title, class: "col-2 col-form-label font-weight-bold text-light" %>
              <div class="col-10">
                <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article" %>
              </div>
          </div>
          <div class="form-group row">
              <%= f.label :description, class: "col-2 col-form-label font-weight-bold text-light" %>
              <div class="col-10">
                <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Article Description" %>
              </div>
          </div>
          
          <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg"%>
          </div>
          
          <div class="form-group row justify-content-center">
            <%= link_to '[ Return to Articles Listing ]', articles_path, class: "text-light" %>
          </div>
            
        <% end %>

      </div>
    </div>
  </div>
</div>
