<h1>Edit article</h1>

  <% if @article.errors.any? %>
    <h2>The following errors prevented the articles from being saved:</h2>
    <ul>
      <% @article.errors.full_messages.each do |error_msg| %>
         <li><%= error_msg %></li>
      <% end %>
    </ul>
  <% end %>
    
<%= form_with(model: @article, local: true) do |f| %>
  <p>
  <%= f.label :title %><br/>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :description %>
  <%= f.text_area :description %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>
<%= link_to 'Cancel and return to Index', articles_path %>