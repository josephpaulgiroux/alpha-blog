<h1 class="text-center mt-4 font-weight-bold"><%= @user.username %>'s profile</h1>
<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-4">
  <% if logged_in? && current_user == @user %>
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-success" %>
  <% end %>
</div>
<h3 class="text-center mt-4 font-weight-bold">Articles</h1>


<div class="flickr_pagination mt-4">
  <%= will_paginate @articles, :container => false %>
</div>
