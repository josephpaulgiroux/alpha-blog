
<div class="container">
  <% @users.each do |user| %>   
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow-lg mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to user.username, user_path(user), class: "text-info" %> ( <%= user.email %> )
          </div>
          <div class="card-body">
            <%= gravatar_for user, size: 150 %>
            <p class="card-text"><%= user.articles.length  %> articles</p>
            <%= link_to 'View Profile', user_path(user), class: "btn btn-outline-success" %>
            <%= link_to 'Edit Profile', edit_user_path(user), class: "btn btn-outline-info"  %>
            <%= link_to 'Delete User', user_path(user), class: "btn btn-outline-danger", method: :delete, data: { 
              confirm: "Are you sure you want to delete this user?" } %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(user.created_at) %> ago,
            edited <%= time_ago_in_words(user.updated_at) %> ego </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>